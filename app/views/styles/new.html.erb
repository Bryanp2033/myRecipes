<%= render 'shared/page_title', title: "Create a new Style" %>



<%= render 'shared/errors', obj: @style %>

<!-- a form for creating a new style to the db -->
<div class="row">
	<div class="well col-md-8 col-md-offset-2">
		<%= form_for @style do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name %><br/>


		<%= f.submit "Create Style", class: "btn btn-md btn-success" %>
		<% end %>
	</div>
</div>