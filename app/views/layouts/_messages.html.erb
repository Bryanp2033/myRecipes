<!-- a errors messages to be used in several other files and created to keep the code DRY-->
<div class="row">
	<div class='col-md-10'>
		<% flash.each do |message_type, message| %>
		<div class="alert alert-<%= message_type %>">
			<%= message %>
			<a class="close" data-dismiss="alert">&#215</a>
		</div>
		<% end %>
	</div>

</div>
