<%= render 'shared/page_title', title: "All Recipes" %>

 <% @recipes.each do |recipe| %>
 	<div class = "row">
 		<div class = "col-md-2">
 			<section class="chef_info center">
 				<%= gravatar_for recipe.chef, size: 100 %>
 				<h3>Chef name: <%= recipe.chef.name %></h3>
 			</section>
 	</div>

 		<div class="col-lg-8 well">
 			<p><%= link_to recipe.name, recipe_path(recipe) %></p>
 			<p><%= recipe.summary %></p>
 				<p>
 					<span class="quiet"><small> <%= time_ago_in_words(recipe.created_at) %></small></span>
 				</p>
 			</div>
 		</div>
 		<hr/>
 <% end %>