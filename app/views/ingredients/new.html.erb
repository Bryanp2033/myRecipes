
<%= render 'shared/page_title', title: "Create a new ingredient" %>

<%= render 'shared/errors', obj: @ingredient %>

<!-- form for creating a new ingredient to the db-->
<div class="row">
	<div class="well col-md-8 col-md-offset-2">
		<%= form_for @ingredient do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name %><br/>


		<%= f.submit "Create Ingredient", class: "btn btn-md btn-success" %>
		<% end %>
	</div>
</div>