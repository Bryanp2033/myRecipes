<!--render a partial used for displaying error messages-->
<% render 'shared/errors', obj: @chefs %>

<!--form_for chefs-->
<div class="row">
	<div class="well col-md-8 col-md-offset-2">
		<%= form_for @chefs do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %><br/>

		<%= f.label :email %>
		<%= f.text_field :email %><br/>

		<%= f.label :password %>
		<%= f.password_field :password %><br/>

		<!--due to the form being used in new.html and edit.html this code is needed-->
		<%= f.submit(@chefs.new_record? ? 'Create Account' : 'Save Changes' , class: 'btn btn-success') %>

		<% end %>
	</div>
</div>