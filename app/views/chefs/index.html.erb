<%= render 'shared/page_title', title: "All Chefs" %>

<!--tabs sections to switch between chefs#index and recipes#index-->
<ul class="nav nav-tabs">
	<li class="active">
		<%= link_to "Chefs", chefs_path %>
	</li>
	<li>
		<%= link_to "Recipes", recipes_path %>
	</li>
</ul>

<!--pagination feature-->
<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= will_paginate %>
	</div>
</div>

<!--to display each chef in the database-->
<% @chefs.each do |chef| %>
<div class='row'>
	<div class=" col-md-4 col-md-offset-4 center">
		<section class="chef_info center">
			<%= link_to gravatar_for(chef, size: 225), chef_path(chef) %>
			<h5>Chef name: <%= chef.name %></h5>
		</section>

	</div>
</div>

<% end %>


